<div class="row book">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-md-3">
        <%= image_tag(user_book.photo, class: "img-responsive", alt: "Responsive image") %>
      </div>
      <div class="col-md-6">
        <h4> <%= user_book.title %> </h4> <br>
        <%= user_book.authors.map(&:name).join(', ') %> <br>
        <% if (@comment = user_book.most_recent_comment(current_user)).present? %>
          <%= @comment.content %> says <%= @comment.user.username %>
        <% end %>
      </div>
      <div class="col-md-3">

        <%= button_to "Add to MyReads", listed_books_path(asin: user_book.asin), class: "btn btn-default" if user_signed_in? && current_user.does_not_have(user_book) %>
        <%= button_to "Add to MyReads", new_user_session_path, method: :get, class: "btn btn-default" unless user_signed_in? %>
      </div>
    </div>
  </div>
</div>
