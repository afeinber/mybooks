<div class="row">
  <div class="panel panel-default">
    <div class="panel-body book">
      <div class="col-md-3">
        <%= image_tag(book.photo, class: "img-responsive", alt: "Responsive image") %>
      </div>
      <div class="col-md-6">
        <h4> <%= link_to book.title, "/books/#{book.asin}" %> </h4> <br>
        <%= book.authors.map(&:name).join(', ') %> <br>
        <% if @comment = book.most_recent_comment(current_user).present? %>

          <!-- I pass in the current user here so that it will only show comments
          from users that the current user is following -->

          <%= @comment.content %> says <%= @comment.user.username%>
        <% end %>
      </div>
      <div class="col-md-3">

        <%= button_to "Add to MyReads", listed_books_path(asin: book.asin), class: "btn btn-default" if user_signed_in? && current_user.does_not_have(book) %>
        <%= button_to "Add to MyReads", new_user_session_path, method: :get, class: "btn btn-default" unless user_signed_in? %>
      </div>
    </div>
  </div>
</div>
